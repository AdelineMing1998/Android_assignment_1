<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.meiakirazen.wego_app">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.ACTION_START" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- 第一个按钮的相关视图——运动明星 -->
        <activity
            android:name=".RunActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_run"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".MatchActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_match"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".BrandActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_brand"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".ChatActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_chat"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".ItemActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_item"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".ReviewActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_review"
            android:theme="@style/FullscreenTheme" />
        <activity android:name=".Fragment1" />
        <activity android:name=".Fragment2" />
        <activity android:name=".Fragment3"></activity>
    </application>

</manifest>